<Window x:Class="BlizzadKiller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlizzadKiller"
        mc:Ignorable="d"
        Title="BlizzardKiller" Height="210" Width="260" Background="#FFE45555" Foreground="White" WindowStartupLocation="CenterScreen">
    <Grid Background="#FFE85555">
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="68,78,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="24,25,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Text="How long do you wannna be away from Blizzard"/><Run Text="（minutes"/><Run Text="）"/><Run Text="?"/></TextBlock>
        <Button x:Name="button" Content="OK!" HorizontalAlignment="Left" Margin="41,129,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        <Button x:Name="button1" Content="Cancel!" HorizontalAlignment="Left" Margin="139,129,0,0" VerticalAlignment="Top" Width="75" Click="button1_Click"/>

    </Grid>
</Window>
